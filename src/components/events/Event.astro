---
import type { CollectionEntry } from 'astro:content';

interface Props {
  event: CollectionEntry<'events'>;
}

const { event } = Astro.props;

const { Content } = await event.render();

const dateTimeOptions = {
    timeZone: 'Europe/Oslo',
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    hour12: false 
};
const formatter = new Intl.DateTimeFormat('no-NO', dateTimeOptions);

const formattedDate = formatter.format(event.data.date);
---

<div class="event__date">Dato: {formattedDate}<div>
<div class="event__location">Lokasjon: {event.data.location}<div>
<Content />


